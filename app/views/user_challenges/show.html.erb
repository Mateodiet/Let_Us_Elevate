<div class="container img">
  <div class="show-content-challenges">
    <div class="trans-back m-4">
      <h1 class="challenge-content">Challenge <%= @userchallenge.challenge.title %></h1>
    </div>
      <div class="trans-back">
        <p><%= @userchallenge.challenge.description %></p>



          <% if @userchallenge.status == "réussi" %>
            <p class="valid">Bravo ! Place à la suite !</p>
          <% else %>
            <%= link_to "Valider", change_status_user_challenge_path(@userchallenge, status: "réussi"), data: { turbo_method: :patch}, class:"text-decoration-none text-white button-64" %>
          <% end %>

            <div class="mt-4 mb-2">
              <%= link_to "Tous mes challenges", user_challenge_path, class:"text-decoration-none text-white btn btn-gradient" %>
            </div>
      </div>
  </div>
</div>
