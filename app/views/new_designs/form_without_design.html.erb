<div class="container">
  <div class="space-form-1"></div>
    <h2 class="text-center text-white">Let Us Elevate</h2>
  <div class="space-form"></div>
  <div class="trans-cards px-2">

    <h2 class="pt-2">Crée ton Design Humain</h2>
    <%= form_with url: try_design_post_path, method: :post do %>
<%# ATTENTION FORMAT DATE ET HEURE %>
      <div class="form-name mb-2">
      <p>Nom</p>
        <%= text_field_tag :name,
              params[:name],
              class: "form-control text-center fw-bold w-100% round-input",
              placeholder: "Jane Doe"
          %>
      </div>

        <div class="form-date">
                <div class="form-day">
                  <p>Jour</p>
                  <%= text_field_tag :day,
                        params[:day],
                        class: "form-control text-center fw-bold round-input",
                        placeholder: "08"
                    %>
                </div>
                <div class="form-month">
                <p>Mois</p>
                  <%= text_field_tag :month,
                        params[:month],
                        class: "form-control text-center fw-bold round-input",
                        placeholder: "06"
                    %>
                </div>
                <div class="form-year">
                <p>Année</p>
                  <%= text_field_tag :year,
                        params[:year],
                        class: "form-control text-center fw-bold round-input",
                        placeholder: "1980"
                    %>
                </div>
        </div>
            <div class="form-birth mt-3">
              <div class="form-hour">
              <p>Heure</p>
                <%= text_field_tag :hour,
                      params[:hour],
                      class: "form-control text-center fw-bold round-input",
                      placeholder: "08"
                  %>
              </div>
              <div class="form-min">
              <p>Minutes</p>
                <%= text_field_tag :minutes,
                      params[:minutes],
                      class: "form-control text-center fw-bold round-input",
                      placeholder: "15"
                  %>
              </div>
          </div>
            <div class="form-city mt-3">
            <p>Lieu de naissance</p>
                    <%= text_field_tag :city,
                        params[:city],
                        class: "form-control text-center fw-bold round-input",
                        placeholder: "Paris"
                    %>
            </div>
        <%= submit_tag "Générer mon Design Humain !", name: "", class: "btn-pale-blue mt-4 text-center w-100 mb-3" %>
              <% end %>

  </div>
</div>
